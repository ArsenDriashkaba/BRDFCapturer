<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="212dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="15dp"
        android:text="Capture"
        app:backgroundTint="#8BC34A"
        app:strokeColor="#FFFFFF" />

    <Button
        android:id="@+id/gallery"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="15dp"
        android:text="Gallery" />

    <RelativeLayout
        android:id="@+id/imagesLayout"
        android:layout_width="match_parent"
        android:layout_height="632dp">

        <ImageView
            android:id="@+id/photo2"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="203dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="182dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/photo1"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="201dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="414dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="198dp"
            android:layout_marginBottom="414dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="235dp"
            android:layout_marginBottom="390dp"
            android:text="Normal Map"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="390dp"
            android:text="Diffuse"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/photo3"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="181dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/photo4"
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="137dp"
            android:layout_marginBottom="45dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="235dp"
            android:layout_marginBottom="156dp"
            android:text="Roughness"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="46dp"
            android:layout_marginBottom="157dp"
            android:text="Specular"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/photo4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="71dp"
            android:layout_marginBottom="463dp"
            android:text="Capture image or choose from gallery"
            android:textAlignment="center" />

        <RelativeLayout
            android:id="@+id/progressLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FFFFFF">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginEnd="171dp"
                android:layout_marginBottom="224dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="106dp"
                android:layout_marginBottom="195dp"
                android:text="Loading..."
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="197dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="96dp"
                android:layout_marginBottom="120dp"
                android:text="Please wait while we are processing your image ;)"
                android:textAlignment="center" />
        </RelativeLayout>

        <Button
            android:id="@+id/save"
            android:layout_width="102dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="136dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="73dp"
            android:text="Save" />


    </RelativeLayout>

</RelativeLayout>